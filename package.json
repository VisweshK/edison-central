{
  "name": "edison-central",
  "version": "1.0.0",
  "description": "Central computer for displaying messages to the audience.",
  "main": "src/main.js",
  "bin": "src/main.js",
  "dependencies": {
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "morgan": "^1.9.0",
    "nunjucks": "^3.1.2",
    "opn": "^5.3.0",
    "shortid": "^2.2.8"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/express": "^4.11.1",
    "@types/express-session": "^1.15.8",
    "@types/jquery": "^3.3.1",
    "@types/mocha": "^5.0.0",
    "@types/morgan": "^1.7.35",
    "@types/nunjucks": "^3.0.0",
    "@types/opn": "^5.1.0",
    "@types/puppeteer": "^1.2.1",
    "@types/shortid": "0.0.29",
    "browserify": "^16.1.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "concurrently": "^3.5.1",
    "mocha": "^5.1.0",
    "nodemon": "^1.17.3",
    "pkg": "^4.3.1",
    "puppeteer": "^1.3.0",
    "tsify": "^4.0.0",
    "tslint": "^5.9.1",
    "tslint-eslint-rules": "^5.1.0",
    "typedoc": "^0.11.1",
    "typescript": "^2.7.2"
  },
  "scripts": {
    "test": "gulp test",
    "lint": "tslint --project ./tsconfig.json",
    "build": "concurrently \"npm run build-ts\" \"npm run bundle\"",
    "build-ts": "tsc",
    "bundle": "node bundleJS.js",
    "dist": "pkg package.json --out-path ./dist -t node9-linux-x86,node9-win-x86",
    "server": "node build/main.js",
    "dev": "NODE_ENV=development NO_LOGIN=1 nodemon src/main.js",
    "docs": "typedoc ./src --mode file --out ./docs --module commonjs",
    "production": "NODE_ENV=production node src/main.js",
    "reset:linux": "rm -rf ~/.edison"
  },
  "pkg": {
    "assets": [
      "./src/client/**/*"
    ]
  },
  "bundle": {
    "entries": [
      "index.ts",
      "passwordForm.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/npsinr-elections/edison-central.git"
  },
  "keywords": [
    "NPS",
    "INR",
    "elections"
  ],
  "author": "npsinr-elections",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/npsinr-elections/edison-central/issues"
  },
  "homepage": "https://github.com/npsinr-elections/edison-central#readme"
}
