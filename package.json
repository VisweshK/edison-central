{
  "name": "edison-central",
  "version": "1.0.0",
  "description": "Central computer for displaying messages to the audience.",
  "main": "build/main.js",
  "bin": "build/main.js",
  "dependencies": {
    "bootstrap": "^4.1.1",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "jquery": "^3.3.1",
    "morgan": "^1.9.0",
    "nunjucks": "^3.1.2",
    "opn": "^5.3.0",
    "shortid": "^2.2.8"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.4.31",
    "@types/chai": "^4.1.2",
    "@types/express": "^4.11.1",
    "@types/express-session": "^1.15.8",
    "@types/jquery": "^3.3.1",
    "@types/mocha": "^5.0.0",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.1.2",
    "@types/nunjucks": "^3.0.0",
    "@types/opn": "^5.1.0",
    "@types/puppeteer": "^1.2.1",
    "@types/shortid": "0.0.29",
    "adm-zip": "^0.4.11",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "concurrently": "^3.5.1",
    "cpx": "^1.5.0",
    "eslint": "^4.19.1",
    "glob": "^7.1.2",
    "mocha": "^5.1.1",
    "pkg": "^4.3.1",
    "puppeteer": "^1.3.0",
    "ts-loader": "^4.3.0",
    "ts-node": "^6.0.3",
    "ts-node-dev": "^1.0.0-pre.22",
    "tslint": "^5.9.1",
    "tslint-eslint-rules": "^5.1.0",
    "typedoc": "^0.11.1",
    "typescript": "^2.7.2",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.3"
  },
  "scripts": {
    "test": "mocha \"src/test/**/*.ts\" --require ts-node/register",
    "lint": "tslint --project ./tsconfig.json && eslint .",
    "build": "npm run build-ts && npm run bundle && npm run build-static",
    "build-ts": "tsc",
    "bundle": "webpack --mode production",
    "build-static": "cpx \"./src/client/**/*\" ./build/client",
    "dist": "pkg package.json --out-path ./dist -t node9-linux-x86,node9-win-x86 && cpx ./node_modules/opn/xdg-open ./dist",
    "dev": "NODE_ENV=development NO_LOGIN=1 concurrently --kill-others -n \"client,server\" -c \"bgGreen,bgYellow\" \"npm run watch-server\" \"npm run watch-client\"",
    "docs": "typedoc ./src --mode file --out ./docs --module commonjs",
    "reset:linux": "rm -rf ~/.edison",
    "start": "ts-node src/main.ts",
    "watch-client": "webpack --mode development --info-verbosity=none",
    "watch-server": "ts-node-dev --respawn src/main.ts"
  },
  "pkg": {
    "assets": [
      "./build/client/**/*"
    ]
  },
  "bundle": {
    "entries": [
      "index.ts",
      "passwordForm.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/npsinr-elections/edison-central.git"
  },
  "keywords": [
    "NPS",
    "INR",
    "elections"
  ],
  "author": "npsinr-elections",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/npsinr-elections/edison-central/issues"
  },
  "homepage": "https://github.com/npsinr-elections/edison-central#readme"
}
